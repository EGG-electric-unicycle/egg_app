                        android:textSize="16dp"
                        android:textColor="@color/colorText"
                        android:paddingLeft= "10dp"/>
                </LinearLayout>
            </TableRow>
        <TableRow>


        <LinearLayout
            android:id = "@+id/voltageView"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_column="0"
            android:layout_width="0dp">
            <ImageView
                android:id="@+id/iconVoltage"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_voltage"
                android:paddingRight= "5dp"
                android:paddingBottom="1dp"
                android:layout_gravity="bottom" />
            <TextView
                android:id="@+id/showVoltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.0"
                android:layout_gravity="bottom"
                android:textSize="34dp"
                android:textColor="@color/colorText"
                android:paddingLeft= "10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V"
                android:layout_gravity="bottom"
                android:textSize="16dp"
                android:textColor="@color/colorText"
                android:paddingLeft= "5dp"/>
        </LinearLayout>

            <LinearLayout
                android:id = "@+id/tempView"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_column="1"
                android:layout_width="0dp">
                <ImageView
                    android:id="@+id/iconTemp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_temp"
                    android:paddingRight= "5dp"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:id="@+id/showTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.0"
                    android:layout_gravity="bottom"
                    android:textSize="34dp"
                    android:textColor="@color/colorText"
                    android:paddingLeft= "10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ÂºC"
                    android:layout_gravity="bottom"
                    android:textSize="16dp"
                    android:textColor="@color/colorText"
                    android:paddingLeft= "5dp"/>
            </LinearLayout>




        </TableRow>
      <TableRow>

          <LinearLayout
              android:id = "@+id/currentView"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
              android:layout_column="0"
              android:layout_width="0dp">
              <ImageView
                  android:id="@+id/iconCurrent"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:src="@drawable/ic_current"
                  android:paddingRight= "10dp"
                  android:paddingBottom= "4dp"
                  android:layout_gravity="bottom" />
              <TextView
                  android:id="@+id/showCurrent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="-00.00"
                  android:layout_gravity="bottom"
                  android:textSize="34dp"
                  android:textColor="@color/colorText"
                  android:paddingLeft= "10dp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="A"
                  android:layout_gravity="bottom"
                  android:textSize="16dp"
